@model IEnumerable<ScrapTrack.Data.Models.Volunteer>


<div class="dt-vertical-scroll">
    <table class="table" id="volunteerTable">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Volunteers" asp-action="Details" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Volunteers asp-action="Details" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.LastName)
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
            </div>

<script>
    function searchVolunteers() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("volunteerNameInput");
        filter = input.value.toUpperCase();
        table = document.getElementById("volunteerTable");
        tr = table.getElementsByTagName("tr");

        for (i = 1; i < tr.length; i++) {
            firstName = tr[i].getElementsByTagName("td")[0].innerText.toUpperCase();
            lastName = tr[i].getElementsByTagName("td")[1].innerText.toUpperCase();
            fullName = firstName + ' ' + lastName;

            if (fullName !== undefined) {
                if (fullName.indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }

</script>