@model IEnumerable<ScrapTrack.Data.Models.Volunteer>


<div class="dt-vertical-scroll">
    <table class="table" id="volunteerTable">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th class="last-header">
                    Last Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vol in Model)
            {
                <tr data-volunteer-id="@vol.Id">
                    <td>
                        <a asp-controller="Volunteers" asp-action="Details" asp-route-id="@vol.Id">
                            @Html.DisplayFor(modelItem => vol.FirstName)
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Volunteers" asp-action="Details" asp-route-id="@vol.Id">
                            @Html.DisplayFor(modelItem => vol.LastName)
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
