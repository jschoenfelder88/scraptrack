@using ScrapTrack.Data.Models
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager
<style>
    .loginGreet {
        font-size: 1.3rem;
    }
    .btn.logout-btn {
        margin-top: .25rem;
    }
</style>
@if (_signInManager.IsSignedIn(User))
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="btn loginGreet">
                Welcome, @User.Identity.Name
            </a>
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-primary logout-btn" asp-action="Logout" asp-controller="Account">Logout</a>
        </li>
    </ul>
}

