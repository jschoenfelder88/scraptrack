<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/png" href="@Url.Content("~/Images/Scraps-KC-favicon.png")"/>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar">
        <div class="container" style="max-width: 1425px; padding: 0 90px; height: 100%;">
            <div class="col-3">
                <a class="navbar-brand" href="#">
                    <img src="@Url.Content("~/Images/scraptrack-logo.png")" style="height:54px;"/>
                </a>
            </div>
            <div class="col-9">
                <ul class="nav justify-content-end">
                    <li class="nav-item">
                        @Html.ActionLink("Dashboard", "Index", "Home", null, new { @class = "nav-link active" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Volunteers", "Index", "Volunteer", null, new { @class = "nav-link active" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Items", "Index", "Item", null, new { @class = "nav-link active" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Reports", "Index", "Report", null, new { @class = "nav-link active" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Aldojo</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
