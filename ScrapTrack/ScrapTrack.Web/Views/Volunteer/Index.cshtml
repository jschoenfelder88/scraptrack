@model IEnumerable<ScrapTrack.Data.Models.Volunteer>

@{
    ViewBag.Title = "Search Volunteers";
}

<h2>Volunteers</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td class="text-end">
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }, new { @class = "btn btn-secondary"})
            @Html.ActionLink("Details", "Details", new { id=item.ID }, new { @class = "btn btn-primary"})
        </td>
    </tr>
}
</table>

<p>
    @Html.ActionLink("Create New", "Create", "Volunteer", new { @class = "btn btn-success" })
</p>
